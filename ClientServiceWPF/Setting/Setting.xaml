                    <TextBox x:Name="textBoxTimeAwait" HorizontalAlignment="Left" Height="26" Margin="261,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="68" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                    <Label Content="Исполнитель" ToolTip="Будет отображен в протоколе обработки" Margin="10,41,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="246"/>
                    <TextBox x:Name="textBoxISP" Height="26" Margin="261,41,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
                    <Label Content="Виртуальный путь" ToolTip="Клиент будет открывать данный каталог при активации кнопки показать файл. Нужно указать путь к каталогу Process" Margin="10,72,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="180"/>
                    <TextBox x:Name="textBoxVirtualPath" Height="26" Margin="261,72,39,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" VerticalContentAlignment="Center" IsReadOnly="True" Foreground="Gray"/>
                    <Button x:Name="buttonBrouseVirtualPath" HorizontalAlignment="Right" Margin="0,72,10,0" VerticalAlignment="Top" Width="24" Height="26" Style="{DynamicResource BrouseButton}" Click="buttonBrouseVirtualPath_Click"/>
                    <CheckBox x:Name="checkBoxIsVirtualPath" HorizontalAlignment="Left" Margin="240,72,0,0" VerticalAlignment="Top" Height="26" VerticalContentAlignment="Center"/>
                </Grid>
            </TabItem>
            <TabItem Header="Проверки">
                <Grid>
                    <GroupBox Header="">
                        <Grid>
                            <ListBox HorizontalAlignment="Left" Width="106" ItemsSource="{Binding Mode=OneWay, Source={StaticResource CVSCheckTableName}}" Name="ListBoxCheckTableName" SelectionChanged="ListBox_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"></TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <ListView Name="ListViewCheck" Margin="111,0,172,0" ItemsSource="{Binding Mode=OneWay, Source={StaticResource CVSOrclProcedure}}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="" Width="Auto">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox Width="20" Height="20" IsChecked="{Binding STATE, Mode=TwoWay}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="" Width="Auto">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Image Width="20" Height="20">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Excist}" Value="{x:Static medpom:StateExistProcedure.Exist}">
                                                                        <Setter Property="Source" Value="../Image/button_ok.png"></Setter>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Excist}" Value="{x:Static medpom:StateExistProcedure.NotExcist}">
                                                                        <Setter Property="Source" Value="../Image/error.png"></Setter>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Наименование" DisplayMemberBinding="{Binding FULL_NAME}" Width="Auto" />
                                    </GridView>
                                </ListView.View>
                                <ListView.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Добавить" Name="MenuItemCheckAdd" Click="MenuItemCheckAdd_Click"></MenuItem>
                                        <MenuItem Header="Изменить" Name="MenuItemCheckChange" Click="MenuItemCheckChange_Click"></MenuItem>
                                        <Separator/>
                                        <MenuItem Header="Дублировать" Name="MenuItemCheckDouble" Click="MenuItemCheckDouble_Click"></MenuItem>
                                        <Separator/>
                                        <MenuItem Header="Удалить" Name="MenuItemCheckDelete" Click="MenuItemCheckDelete_Click" ></MenuItem>
                                    </ContextMenu>
                                </ListView.ContextMenu>
                            </ListView>
                            <GroupBox Header="Добавить пакет" HorizontalAlignment="Right" Height="74" Margin="0,-8,0,0" VerticalAlignment="Top" Width="167">
                                <Grid>
                                    <TextBox Name="TextBoxAddPack" Height="22" VerticalAlignment="Top"/>
                                    <Button Margin="0,27,0,0" Height="23" VerticalAlignment="Top" Name="ButtonAddPacket" Content="Добавить пакет" Click="ButtonAddPacket_Click" Style="{DynamicResource MainButton}"></Button>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Локальное хранение" HorizontalAlignment="Right" Height="74" Margin="0,71,0,0" VerticalAlignment="Top" Width="167">
                                <Grid>
                                    <Button x:Name="ButtonLoadCheckFromFile" Height="22" VerticalAlignment="Top" Content="Загрузить из файла" Click="ButtonLoadCheckFromFile_Click" Style="{DynamicResource MainButton}"/>
                                    <Button Margin="0,27,0,0" Height="23" VerticalAlignment="Top" x:Name="ButtonSaveCheckInFile" Content="Сохранить в файл" Click="ButtonSaveCheckInFile_Click" Style="{DynamicResource MainButton}"/>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Работа с сервером" HorizontalAlignment="Right" Height="103" Margin="0,150,0,0" VerticalAlignment="Top" Width="167">
                                <Grid>
                                    <Button x:Name="ButtonCheckListCheck" Height="22" VerticalAlignment="Top" Content="Проверка процедур" Style="{DynamicResource MainButton}" Click="ButtonCheckListCheck_Click" />
                                    <Button Margin="0,27,0,0" Height="23" VerticalAlignment="Top" x:Name="ButtonSaveCheckInServer" Content="Сохранить на сервер" Style="{DynamicResource MainButton}" Click="ButtonSaveCheckInServer_Click" />
                                    <Button Margin="0,55,0,0" Height="23" VerticalAlignment="Top" x:Name="ButtonLoadCheckFromServer" Content="Загрузить из БД" Style="{DynamicResource MainButton}" Click="ButtonLoadCheckFromServer_Click" />
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="buttonOK" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="194" Height="23" Style="{DynamicResource MainButton}" Click="buttonOK_Click"/>
        <Button x:Name="buttonCancel" Content="Отмена" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="194" Height="23" Style="{DynamicResource MainButton}" Click="buttonCancel_Click"/>
    </Grid>
</Window>
